{% extends 'base.html.twig' %}

{% block title %}Recettes{% endblock %}

{% block content %}

<div class="container">
    <h1 class="text-center"> Recettes </h1>

    <div class="row">
        <div class="col-3">
            <h4> Filtres </h4>
            {{form(form)}}
        </div>
        <div class="col-9">
            <div class="row">
                {% for recette in recettes %}
                    <div class="col-3">
                        <div class="recette-items text-center">
                            <a href="{{ path('recette', { 'slug': recette.slug }) }}"><img src="/uploads/{{recette.illustration}}" alt="{{ recette.name }}" class="img-fluid"></a>
                            <h5>{{ recette.name }}</h5>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</div>
{% endblock %}
